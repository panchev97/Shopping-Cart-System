            </div>
            <div class="col-md-5">
                <h4><b>Name: </b>{{ cart_product.product.name }}</h4>
                <h4><b>Price: </b>{{ cart_product.product.price }} â‚¬</h4>
                <h4><b>Description:</b></h4>
                <p><h4>{{ cart_product.product.description }}</h4>
            </div>
        </div>
        <hr>
    {% endfor %}
    <a href="/products/remove" class="btn btn-danger">Clear Bag</a>
    </div>
{% endblock %}